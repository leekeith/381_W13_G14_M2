<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ca.ce381w13g14m2.androidbase.DrawView
        android:id="@+id/drawView1"
        android:layout_width="600dp"
        android:layout_height="450dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:background="@drawable/grid" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/drawView1"
        android:layout_toLeftOf="@+id/ImageButton02"
        android:onClick="onClear"
        android:text="@string/button_clear" />

    <ImageButton
        android:id="@+id/ImageButton01"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/ImageButton03"
        android:layout_marginRight="36dp"
        android:layout_toLeftOf="@+id/ImageButton03"
        android:background="@drawable/red"
        android:onClick="color_red" />

    <ImageButton
        android:id="@+id/ImageButton03"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/button1"
        android:layout_alignTop="@+id/ImageButton02"
        android:layout_marginRight="41dp"
        android:background="@drawable/green"
        android:onClick="color_green" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/seekBar1"
        android:layout_below="@+id/button1"
        android:layout_marginTop="97dp"
        android:background="@drawable/blue"
        android:onClick="color_blue" />

    <ImageButton
        android:id="@+id/ImageButton02"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_marginRight="43dp"
        android:layout_toLeftOf="@+id/imageButton1"
        android:background="@drawable/yellow"
        android:onClick="color_yellow" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ImageButton01"
        android:layout_alignLeft="@+id/ImageButton01"
        android:layout_marginBottom="21dp"
        android:text="@string/label_color"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar1"
        android:layout_alignLeft="@+id/ImageButton01"
        android:layout_marginBottom="41dp"
        android:text="@string/label_brushsize"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/drawView1"
        android:layout_marginBottom="52dp"
        android:layout_toRightOf="@+id/drawView1"
        android:max = "20"
        android:progress="1" />

    <CheckBox
        android:id="@+id/check_box2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/drawView1"
        android:layout_alignRight="@+id/seekBar1"
        android:clickable="false"
        android:text="Connected" />

</RelativeLayout>